	cout<<"\t                                                         \n";
	cout<<"\t                             __                          \n";
	cout<<"\t                     |   |  |  \\                        \n";
	cout<<"\t                     |   |  |   \\                       \n";
	cout<<"\t                     |   |  |   |                        \n";
	cout<<"\t                     |   |  |   /                        \n";
	cout<<"\t                     |___|  |__/                         \n";
	cout<<"\t                                                         \n";
