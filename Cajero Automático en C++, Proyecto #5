	cout<<"\n\t Bienvenido, este programa define un registro recopilatorio de n países por medio de la sentencia struct. \n\n";
    int i=0, opc=0, salida=0, acum=0;	
    
	FILE *fichero;
	
	while (!salida)
 	{	
 		cout<<"\n\n\t MENU: ";
