	cout<<"\t                     |   |  |  \\                        \n";
	cout<<"\t                     |   |  |   \\                       \n";
	cout<<"\t                     |   |  |   |                        \n";
	cout<<"\t                     |   |  |   /                        \n";
	cout<<"\t                     |___|  |__/                         \n";
